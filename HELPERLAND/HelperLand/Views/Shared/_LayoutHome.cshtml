@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
   
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="~/css/Index.css">
    
        <title>@ViewBag.Title</title>

        @if (IsSectionDefined("Styles"))
        {
            @RenderSection("Styles", required:true)
        }
    </head>

    <body>
        <!-- header -->
        <header class="site-header">
            <div class="header-wrapper d-flex justify-content-between align-items-center">
                <a href="~/Home/Index" title="Helperland" class="logo-block">
                    <img src="~/images/site-logo-large.png" alt="HelperLand logo">
                </a>
                <div class="header-right-block">
                    <div class="">
                        <nav class="navbar navbar-expand-lg align-items-center">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarNav" style="padding-bottom: 15px;">
                                <ul class="navbar-nav align-items-center">
                                    <li class="nav-item">
                                        <a class="nav-link border-btn" href="~/BookingService/Index" title="Book a Cleaner">Book a Cleaner</a>
                                    </li>
                                    <li class="nav-item under-line">
                                        <a class="nav-link" href="~/Home/price" title="Prices">Prices</a>
                                    </li>
                                    <li class="nav-item under-line">
                                        <a class="nav-link" href="#" title="Our Guarantee">Our Guarantee</a>
                                    </li>
                                    <li class="nav-item under-line">
                                        <a class="nav-link" href="#" title="Blog">Blog</a>
                                    </li>
                                    <li class="nav-item under-line">
                                        <a class="nav-link" href="~/Home/contact" title="Contact us">Contact us</a>
                                    </li>
                                    @if (HttpContextAccessor.HttpContext.Session.GetString("FirstName") == null)
                                    {
                                        <li class="nav-item">
                                            <partial name="_LoginPartial" />
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <div class="vertical_line"></div>
                                        </li>
                                        <li class="notification">
                                            <div class="align-items-center justify-content-center" id="notification" style="margin:0 10px;">
                                                <a href="#"><img src="~/images/notification-bell-icon/icon-notification.png"></a>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="" style="height:50px; width:1px; background:#fff;">
                                            </div>
                                        </li>
                                        <li class="dropdown">
                                            <a class="nav-link" href="#" id="navbarDropdown1" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <img src="~/images/profile-logo-man/forma-1.png">
                                                <img src="~/images/up-arrow/forma-1-copy-14.png" style="margin-left:8px;">
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown1">
                                                <a class="dropdown-item">My Setting</a>
                                                <a class="dropdown-item" asp-action="Logout" asp-controller="UserTable">Logout</a>

                                            </div>
                                        </li>
                                    }
                                    <li class="nav-item">
                                        <a class="nav-link border-btn" href="~/UserTable/HelperRegistration" title="Become a Helper">Become a Helper</a>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer class="site-footer">
            <div class="footer-top">
                <div class="container">
                    <div class="row justify-content-center align-items-center text-center">
                        <div class="col-lg-2">
                            <a href="index" title="Helper Hand">
                                <img src="~/images/site-logo.png" alt="HelperLand">
                            </a>
                        </div>
                        <div class="col-lg-8">
                            <ul class="footer-navigation d-flex flex-wrap justify-content-center align-items-center">
                                <li>
                                    <a href="~/Home/index" title="Home">Home</a>
                                </li>
                                <li>
                                    <a href="~/Home/About" title="About">About</a>
                                </li>
                                <li>
                                    <a href="#" title="Testimonials">Testimonials</a>
                                </li>
                                <li>
                                    <a href="~/Home/faq" title="FAQs">FAQs</a>
                                </li>
                                <li>
                                    <a href="#" title="Insurance Policy">Insurance Policy</a>
                                </li>
                                <li>
                                    <a href="#" title="Impressum">Impressum</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-2">
                            <ul class="social-media-list d-flex justify-content-end">
                                <li>
                                    <a href="#" target="_blank" title="Facebook">
                                        <img src="~/images/ic-facebook.png" alt="Facebook">
                                    </a>
                                </li>
                                <li>
                                    <a href="#" target="_blank" title="Instagram">
                                        <img src="~/images/ic-instagram.png" alt="Instagram">
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="line"></div>

            <div class="footer-bottom">
                <div class="container justify-content-center">
                    <div class="row">
                    <div class="col-md-10">
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut feugiat nunc libero, ac
                                malesuada ligula aliquam ac. <a href="#" style="display:inline-block" title="Privacy Policy">Privacy Policy</a></p>
                    </div>
                    <div style="margin:5px 0;" class="col-md-2 center-text align-items-center justify-content-center">
                        <a href="#" class="ok-btn">OK!</a>
                    </div>
                    </div>
                </div>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

        <script type="text/javascript" src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        <script type="text/javascript" src="~/js/index.js"></script>

        @if (IsSectionDefined("Scripts"))
        {
            @RenderSection("Scripts", required:true)
        }
    </body>

</html>