@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="../css/index.css">

        <title>@ViewBag.Title</title>

        @if (IsSectionDefined("Styles"))
        {
            @RenderSection("Styles", required:true)
        }
    </head>

    <body>
        <header class="contact faq-header">
            <div class="header-wrapper d-flex justify-content-between align-items-center">
                <a class="navbar-brand" href="~/Home/index">
                    <img src="~/images/site-logo.png" alt="Logo">
                </a>
                <div>
                    <nav class="navbar navbar-expand-lg">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse justify-content-end" style="padding-bottom:12px;" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") == null)
                                    {
                                        <a class="nav-link border-btn" href="#" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#login">Book now</a>
                                        <partial name="_LoginPartial" />
                                    }
                                    else
                                    {
                                        <a class="nav-link border-btn" href="~/BookingService/BookService">Book now</a>
                                    }
                                
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link border-btn-bg" href="~/Home/price">Prices & Services</a>
                                </li>

                                <li class="nav-item under-line">
                                    <a class="nav-link" href="#">Warranty</a>
                                </li>

                                <li class="nav-item under-line">
                                    <a class="nav-link" href="#">Blog</a>
                                </li>

                                <li class="nav-item under-line">
                                    <a class="nav-link" href="~/Home/contact">Contact</a>
                                </li>

                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") == null)
                                {
                                    <li class="nav-item" style="margin-top:17px;">
                                        <div class="container">
                                             <div>
                                                <button class="nav-link border-btn" title="Login" data-bs-toggle="modal" data-bs-target="#login">Login</button>
                                            </div>
                                            <partial name="_LoginPartial" />
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <div class="vertical_line">
                                        </div>
                                    </li>
                                    <li class="notification">
                                        <div class="align-items-center justify-content-center" id="notification" style="margin:0 10px;">
                                            <a href="#"><img src="~/images/notification-bell-icon/icon-notification.png"></a>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="" style="height:50px; width:1px; background:#fff;">
                                        </div>
                                    </li>
                                    <li class="dropdown">
                                        <a class="nav-link" href="#" id="navbarDropdown1" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <img src="~/images/profile-logo-man/forma-1.png">
                                            <img src="~/images/up-arrow/forma-1-copy-14.png" style="margin-left:8px;">
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown1">
                                            @if(HttpContextAccessor.HttpContext.Session.GetString("UserTypeId")==1.ToString())
                                            {
                                                <a asp-action="MySetting" asp-controller="Customer" class="dropdown-item">My Setting</a>
                                            }
                                            else
                                            {
                                                <a asp-action="Index" asp-controller="Helper" class="dropdown-item">My Setting</a>
                                            }

                                            <a class="dropdown-item" asp-action="Logout" asp-controller="UserTable">Logout</a>

                                        </div>
                                    </li>
                                }

                                <li class="nav-item">
                                    <a class="nav-link border-btn" href="~/UserTable/HelperRegistration">Become a Helper</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        

        @RenderBody()

        <!-- Footer -->
        <footer class="site-footer">
            <div class="footer-top">
                <div class="container">
                    <div class="row justify-content-center align-items-center text-center">
                        <div class="col-lg-2">
                            <a href="~/Home/index" title="Helper Hand">
                                <img src="../images/site-logo.png" alt="HelperLand">
                            </a>
                        </div>
                        <div class="col-lg-8">
                            <ul class="footer-navigation d-flex flex-wrap justify-content-center ">
                                <li>
                                    <a href="~/Home/index" title="Home">Home</a>
                                </li>
                                <li>
                                    <a href="~/Home/about" title="About">About</a>
                                </li>
                                <li>
                                    <a href="#" title="Testimonials">Testimonials</a>
                                </li>
                                <li>
                                    <a href="~/Home/faq" title="FAQs">FAQs</a>
                                </li>
                                <li>
                                    <a href="#" title="Insurance Policy">Insurance Policy</a>
                                </li>
                                <li>
                                    <a href="#" title="Impressum">Impressum</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-2">
                            <ul class="social-media-list d-flex justify-content-end">
                                <li>
                                    <a href="#" target="_blank" title="Facebook">
                                        <img src="../images/ic-facebook.png" alt="Facebook">
                                    </a>
                                </li>
                                <li>
                                    <a href="#" target="_blank" title="Instagram">
                                        <img src="../images/ic-instagram.png" alt="Instagram">
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="line"></div>

            <div class="copyright">
                <div>
                    <p>©2018 Helperland. All rights reserved.</p>
                </div>
                <div class="p1">
                    <a href="#" title="Terms and Conditions">Terms and Conditions</a>
                </div>
                <p>&nbsp;&nbsp;|</p>
                <div class="p2">
                    <a href="#" title="Privacy Policy">Privacy Policy</a>
                </div>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

        <script type="text/javascript" src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        <script type="text/javascript" src="~/js/index.js"></script>

        @if (IsSectionDefined("Scripts"))
        {
            @RenderSection("Scripts", required:true)
        }
    </body>

</html>